@page "/"
@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="false" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudMainContent>
        @Body
    </MudMainContent>

    <MudAppBar Elevation="4" Class="mt-auto" Style="background-color: #654321; color: white;">

        <MudSpacer />

        <MudButton Href="/shopPage" StartIcon="@Icons.Material.Filled.Storefront" Color="Color.Inherit" Class="mx-2" Variant="Variant.Text" Style="color: white;">
            See Shops
        </MudButton>
        <MudButton Href="/shopCreate" StartIcon="@Icons.Material.Filled.AddBusiness" Color="Color.Inherit" Class="mx-2" Variant="Variant.Text" Style="color: white;">
            Shop Creation
        </MudButton>
        <MudButton Href="/categories" StartIcon="@Icons.Material.Filled.Category" Color="Color.Inherit" Class="mx-2" Variant="Variant.Text" Style="color: white;">
            Categories
        </MudButton>
        <MudButton Href="/items" StartIcon="@Icons.Material.Filled.Inventory" Color="Color.Inherit" Class="mx-2" Variant="Variant.Text" Style="color: white;">
            Items
        </MudButton>

        <MudSpacer />
    </MudAppBar>
</MudLayout>

