@using MagicItems.Shared.Models
@using MudBlazor

@* Board.razor *@

    <MudContainer MaxWidth="MaxWidth.Medium" Class="board-container">
        <MudPaper>
            @foreach (var item in Items)
            {
                <BoardItem Item="item" IsEditing="IsEditing" />
            }
        </MudPaper>
    </MudContainer>

    




@code {
    [Parameter]
    public List<Items> Items { get; set; } = new List<Items>();
    [Parameter]
    public bool IsEditing { get; set; }

}

