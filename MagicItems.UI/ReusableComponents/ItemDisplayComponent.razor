@using MagicItems.Shared.Models

@if(Item is null)
{
    
}
else
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>

                <MudGrid Justify="Justify.SpaceEvenly">
                    <MudText Typo="Typo.h4">@Item.ItemName</MudText>
                    <MudText Typo="Typo.h5">Rarity: @Item.RarityName</MudText>
                </MudGrid>
            </CardHeaderContent>
        </MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.body2">@Item.LongDescription</MudText>
        </MudCardContent>
        <MudCardContent>
            <MudGrid Justify="Justify.SpaceAround">
                <MudText Typo="Typo.body2">Price: @Item.Price</MudText>
                <MudText Typo="Typo.body2">Category: @Item.CategoryName</MudText>
            </MudGrid>
        </MudCardContent>
    </MudCard>
}


@code {
    [Parameter] public Items? Item { get; set; }
}
